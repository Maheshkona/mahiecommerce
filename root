  box-shadow: var(--shadow);
}

/* cards */
.card, .product-card {
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid rgba(0,0,0,.04);
}

/* buttons */
.btn-primary {
  background-color: var(--brand);
  border-color: var(--brand);
}
.btn-primary:hover, .btn-primary:focus {
  background-color: #e05500;
  border-color: #e05500;
}
.btn-outline-primary {
  color: var(--brand);
  border-color: var(--brand);
}
