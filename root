  background-color: var(--brand);
  border-color: var(--brand);
}

/* badges */
.badge.bg-primary { background-color: var(--brand) !important; }
.badge.bg-secondary { background-color: var(--brand-2) !important; }

/* form focus */
.form-control:focus, .form-select:focus {
